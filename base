<body>
    <h1>Control de Stock - MercadoLibre</h1>
    <table>
        <thead>
            <tr>
                <th>SKU</th>
                <th>Producto</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody id="stockTable">
            <!-- Los datos se cargarán aquí dinámicamente -->
        </tbody>
    </table>
    <button onclick="actualizarStock()">Actualizar Stock</button>

    <script>
        async function actualizarStock() {
            try {
                let response = await fetch('https://api.mercadolibre.com/YOUR_ENDPOINT'); // Reemplazar con API real
                let data = await response.json();
                let tableBody = document.getElementById('stockTable');
                tableBody.innerHTML = '';
                data.forEach(item => {
                    let row = `<tr>
                        <td>${item.sku}</td>
                        <td>${item.nombre}</td>
                        <td>${item.stock}</td>
                    </tr>`;
                    tableBody.innerHTML += row;
                });
            } catch (error) {
                console.error("Error al obtener datos", error);
            }
        }
    </script>
</body>
